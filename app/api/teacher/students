// ... (Yuxarıdakı importlar və POST metodu qalır)

export async function GET(request: Request) {
  try {
    // 1. Təhlükəsizlik: Kimliyini yoxlayırıq
    const cookieStore = await cookies();
    const token = cookieStore.get("auth_token")?.value;

    if (!token) return NextResponse.json({ error: "Giriş edilməyib" }, { status: 401 });
    
    const user = JSON.parse(token);
    if (user.role !== 'teacher') return NextResponse.json({ error: "İcazə yoxdur" }, { status: 403 });

    // 2. Admin Açarı ilə yalnız BU müəllimin şagirdlərini çəkirik
    const { data, error } = await supabaseAdmin
        .from('local_students')
        .select('*')
        .eq('teacher_id', user.id) // <--- ƏN VACİB HİSSƏ BURADIR
        .order('created_at', { ascending: false });

    if (error) throw error;

    return NextResponse.json({ students: data });

  } catch (error: any) {
    return NextResponse.json({ error: error.message }, { status: 500 });
  }
}
